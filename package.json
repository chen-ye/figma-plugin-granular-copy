{
  "name": "figma-granular-copy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run clean && npm run typecheck && vite build -c vite.config.main.ts && vite build -c vite.config.ui.ts",
    "clean": "rm -rf dist",
    "build:worker": "vite build -c vite.config.worker.ts",
    "build:ci": "CI=true npm run build",
    "watch": "npm run clean && concurrently \"npm run watch:ui\" \"npm run watch:main\" -n \"ui,main\" -c \"magenta,blue\"",
    "watch:main": "vite build -c vite.config.main.ts --watch",
    "watch:ui": "vite build -c vite.config.ui.ts --watch",
    "test": "vitest",
    "test:e2e": "npm run build && npm run build:worker && playwright test",
    "test:ci": "CI=true vitest run",
    "lint": "biome check . --write && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "format": "biome format --write .",
    "check": "biome check . && npm run lint:eslint"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@figma/eslint-plugin-figma-plugins": "^1.0.0",
    "@figma/plugin-typings": "^1.123.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.18"
  }
}
